<!DOCTYPE html>
%html
%head
  %title Bjcp
  = stylesheet_link_tag    "application"
  = javascript_include_tag "application"
  %script{:src=>"/javascripts/jquery.sizes.min.js", :type=>"text/javascript"}
  %script{:src=>"/javascripts/ember.js", :type=>"text/javascript"}
  %script{:src=>"/javascripts/bootstrap.min.js", :type=>"text/javascript"}
  %script{:src=>"/javascripts/bootstrap-typeahead.js", :type=>"text/javascript"}
  = csrf_meta_tags
  :javascript
    if (navigator.appName == "Microsoft Internet Explorer") {
    alert('Internet Explore is not yet supported. Please use Firefox, Chrome, or Safari. Otherwise, at the very least, IE will have major spacing issues.');
    }
%body
  .navbar.navbar-fixed-top
    .navbar-inner
      .container
        =#%a.brand{:href=>"#"} BJCP
        .nav-collapse
          %ul.nav
            = main_menu_link "Styles", '/'
            = main_menu_link "Practice BJCP Exam", '/takeSampleExam'
            = main_menu_link "Mini Quizzes", quizzes_path
            =# main_menu_link "BJCP Purposes", '/purpose.html'
            =# main_menu_link "Judging Procedures", '/tf.html'
            =# main_menu_link "Style Comparisons", style_comparisons_random_path

  .container.mainArea
    = yield
  = render 'shared/sharedTemplates'
